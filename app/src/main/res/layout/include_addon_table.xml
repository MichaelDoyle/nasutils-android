<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inlude_addon_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="1" >

    <TableRow
        android:id="@+id/addons_table_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/addons_table_name_label"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/addons_table_name_label"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addons_table_name_value"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="14sp"/>
    </TableRow>

    <TableRow
        android:id="@+id/addons_table_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/addons_table_version_label"
            android:textColor="@android:color/primary_text_light"
            android:text="@string/addons_table_version_label"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addons_table_version_value"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="14sp"/>
    </TableRow>
</TableLayout>
