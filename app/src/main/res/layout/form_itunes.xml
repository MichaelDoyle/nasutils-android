<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textview_sharename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edittext_sharename"
        android:text="@string/label_itunes_server_name"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="?android:attr/textColorPrimary" />

    <EditText
        android:id="@+id/edittext_sharename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textview_sharename"
        android:inputType="text"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textview_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edittext_password"
        android:layout_below="@+id/edittext_sharename"
        android:text="@string/label_itunes_password"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="?android:attr/textColorPrimary" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittext_sharename"
        android:layout_below="@+id/edittext_sharename"
        android:layout_toRightOf="@+id/textview_password"
        android:inputType="textPassword"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textview_directory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edittext_directory"
        android:layout_below="@+id/edittext_password"
        android:text="@string/label_itunes_directory"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="?android:attr/textColorPrimary" />

    <EditText
        android:id="@+id/edittext_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittext_sharename"
        android:layout_below="@+id/edittext_password"
        android:layout_toRightOf="@+id/textview_directory"
        android:inputType="text"
        android:maxLines="1" />

</RelativeLayout>
